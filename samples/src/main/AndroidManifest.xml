<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tplmaps.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".sdk.samples.activities.ActivityMain"
            android:configChanges="screenSize|orientation"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sdk.samples.activities.ActivityMaps"
            android:configChanges="screenSize|orientation"
            android:label="@string/maps"
            android:parentActivityName=".sdk.samples.activities.ActivityMain" />
        <activity
            android:name=".sdk.samples.activities.ActivityUIControls"
            android:configChanges="screenSize|orientation"
            android:label="@string/ui_controls"
            android:parentActivityName=".sdk.samples.activities.ActivityMain" />
        <activity
            android:name=".sdk.samples.activities.ActivityShapes"
            android:configChanges="screenSize|orientation"
            android:label="@string/shapes"
            android:parentActivityName=".sdk.samples.activities.ActivityMain" />
        <activity
            android:name=".sdk.samples.activities.ActivityInfoWindows"
            android:configChanges="screenSize|orientation"
            android:label="@string/info_window"
            android:parentActivityName=".sdk.samples.activities.ActivityMain" />
        <activity
            android:name=".sdk.samples.activities.ActivityMapGestures"
            android:configChanges="screenSize|orientation"
            android:label="@string/map_features_gestures"
            android:parentActivityName=".sdk.samples.activities.ActivityMain" />
        <activity
            android:name=".sdk.samples.activities.ActivitySearch"
            android:configChanges="screenSize|orientation"
            android:label="@string/search"
            android:parentActivityName=".sdk.samples.activities.ActivityMain" />
        <activity
            android:name=".sdk.samples.activities.ActivityMapStyle"
            android:configChanges="screenSize|orientation"
            android:label="@string/map_style"
            android:parentActivityName=".sdk.samples.activities.ActivityMain" />
        <activity
            android:name=".sdk.samples.activities.ActivityCamera"
            android:configChanges="screenSize|orientation"
            android:label="@string/camera"
            android:parentActivityName=".sdk.samples.activities.ActivityMain" />
        <activity
            android:name=".sdk.samples.activities.ActivityMapFeatures"
            android:configChanges="screenSize|orientation"
            android:label="@string/map_features"
            android:parentActivityName=".sdk.samples.activities.ActivityMain" />


        <meta-data
            android:name="com.tplmaps.android.sdk.API_KEY"
            android:value="YOUR_API_KEY" />


    </application>

</manifest>