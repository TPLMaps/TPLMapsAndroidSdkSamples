<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tplmaps.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".sdk.samples.activities.ActivityMain"
            android:configChanges="screenSize|orientation"
            android:label="@string/tplmaps">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".sdk.samples.activities.ActivityMaps"
            android:configChanges="screenSize|orientation"
            android:label="@string/maps"
            android:parentActivityName=".sdk.samples.activities.ActivityMain" />

        <activity
            android:name=".sdk.samples.activities.ActivityUIControls"
            android:configChanges="screenSize|orientation"
            android:label="@string/ui_controls"
            android:parentActivityName=".sdk.samples.activities.ActivityMain" />

    </application>

</manifest>