<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tplmaps.android.sdk.samples.activities.ActivityMain">

    <Button
        android:id="@+id/btn_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/maps"/>

    <Button
        android:id="@+id/btn_ui_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ui_controls"/>

    <Button
        android:id="@+id/btn_map_gestures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/map_gestures" />

    <Button
        android:id="@+id/btn_shapes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shapes"/>

</LinearLayout>
